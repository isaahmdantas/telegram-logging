{
    "compilerOptions": {
      "target": "ES2017",
      "module": "ES2015",
      "strict": true,
      "declaration": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "outDir": "./dist", // Diretório de saída para os arquivos transpilados
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*", "src/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  