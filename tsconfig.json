{
    "compilerOptions": {
      "target": "es5",
      "module": "ESNext", // Use "ESNext" para que o TypeScript escolha o formato apropriado
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules"
    ]
}
  